<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="434dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/gyeongsang"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:onClick="gclick"
                android:text="경상관"
                android:textSize="25sp" />

            <Button
                android:id="@+id/building7"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:onClick="seven"
                android:text="7호관"
                android:textSize="25sp" />

            <Button
                android:id="@+id/science"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:onClick="sclick"
                android:text="과학관"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="434dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/international"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:onClick="iclick"
                android:text="국제관"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bukak"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:onClick="bclick"
                android:text="북악관"
                android:textSize="25sp" />

            <Button
                android:id="@+id/art"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:onClick="aclick"
                android:text="예술관"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/law"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:onClick="lclick"
        android:text="법학관"
        android:textSize="25sp" />
</LinearLayout>